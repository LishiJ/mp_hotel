/* pages/filterMore/filterMore.wxss */

page {
  height: 100%;
}

.btn-hover {
  opacity: 0.9;
}

/* 筛选外框 */

.filter-box {
  height: 100%;
  position: relative;
}

/* 重置确定 */

.btn-group {
  position: absolute;
  bottom: 0;
  border-top: 2rpx solid #eee;
  font-size: 30rpx;
  color: #ff7a00;
  line-height: 96rpx;
  text-align: center;
}

.btn-reset {
  width: 180rpx;
  height: 96rpx;
}

.btn-sure {
  background-color: #ff7a00;
  width: 570rpx;
  height: 96rpx;
  color: #fff;
}

/* 筛选条件 */

.filter-condition {
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 98rpx;
  border-top: 2rpx solid #eee;
}

.filter-classify {
  width: 180rpx;
  height: 100%;
  background-color: #f6f6f6;
}

.filter-content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 180rpx;
  background-color: #fff;
}

.classify-item {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.classify-item:not(:last-child) {
  border-bottom: 2rpx solid #eee;
}

.classify-item.active {
  background-color: #fff;
}

/*  */

.filter-item {
  padding: 0 30rpx 10rpx;
  border-bottom: 2rpx solid #eeeeee;
}

.filter-title {
  height: 96rpx;
  line-height: 96rpx;
  color: #999;
  font-size: 26rpx;
}

.filter-btn {
  width: 146rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #f6f6f6;
  border: 2rpx solid #eee;
  color: #333333;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.filter-btn.active{
  border-color: #ff7a00;
  color: #ff7a00;
}
/* 筛选价格 */
.price-random{
  color: #333333;
  font-size: 30rpx;
}
.movable-area{
  width: 514rpx;
  height: 46rpx;
  margin-bottom: 20rpx;
  margin-top: 50rpx;
}
.movable-view{
  width: 52rpx;
  height: 52rpx;
  z-index: 9
}
.btn_slider{
  width: 52rpx;
  height: 52rpx;
}
.slide-bar,.slide-bar_c{
  height: 4rpx;
  position: absolute;
  top: 50%;
  left: 26rpx;
  transform: translateY(-50%);
}
.slide-bar{
  background-color: #eeeeee;
  width: 462rpx;
  z-index: 1
}
.slide-bar_c{
  width: 462rpx;
  background-color: #ff7a00;
  z-index: 5
}
.price-box{
  position: absolute;
  top: -50rpx;
  left: -23rpx;
  color: #333333;
  font-size: 24rpx;
  width: 94rpx;
  text-align: center;
  background-color: #f6f6f6;
  border-radius: 5rpx;
}
.price-box::after{
  content: '';
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border: 6rpx solid transparent;
  border-top-color: #f6f6f6; 

}