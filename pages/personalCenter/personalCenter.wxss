/* pages/personalCenter/personalCenter.wxss */

.personal-center {
  font-size: 28rpx;
  color: #333;
}

/* 头部 */

.personal-header {
  height: 376rpx;
  position: relative;
}

.user-bg {
  width: 100%;
  height: 206rpx;
}

.user-header-main {
  width: 610rpx;
  height: 262rpx;
  padding: 0 40rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  color: #666666;
  box-shadow: 0px 0px 10px 0px rgba(170, 170, 170, 0.3);
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 110rpx;
}
/* 昵称 */
.user-name-box{
  position: absolute;
  top: -60rpx;
  left: 190rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.icon-modify{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
  position: relative;
  top: 3rpx;
}
/* 头像及会员等级 */
.user-avatar-box{
  width: 136rpx;
  border-radius: 68rpx 68rpx 0 0;
  background-color: #ffffff;
  position: absolute;
  top: -68rpx;
  overflow: hidden;
}
/* 用户头像 */
.user-avatar{
  width: 132rpx;
  height: 132rpx;
  margin: 2rpx 0 0 2rpx;
}
.icon-level{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 102rpx;
  right: 0rpx;
}
.text-level{
  display: block;
  background-color: #ff9533;
  width: 114rpx;
  height: 40rpx;
  line-height: 38rpx;
  color: #ffffff;
  text-align: center;
  font-size: 24rpx;
  border-radius: 18rpx;
  margin: 20rpx auto 0;
}
/* 会员福利 */
.benefit{
  height: 102rpx;
  margin:38rpx 0 30rpx 172rpx;
}
.benefit-item{
  width: 50%;
  float: left;
  padding: 10rpx 0; 
}
.benefit-point{
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background-color: #666666;
  border-radius: 4rpx;
  position: relative;
  top: -6rpx;
  margin-right: 22rpx;
}
.level-info{
  margin-top: 30rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  text-align: center;
  border-top: 1px solid #eeeeee;
}
.level-money{
  color: #ff7a00;
}
/* 我的订单及入住 */
.order-check{
  height: 188rpx;
  margin: 20rpx 0 30rpx;
  background-color: #ffffff;
  color: #666666;
  border-bottom: 2rpx solid #eeeeee;
}
.order-check-item{
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  position: relative;
}
.order-check-item:first-child::after{
  content: '';
  position: absolute;
  width: 2rpx;
  height: 28rpx;
  background-color: #eeeeee;
  top: 54rpx;
  right: -2rpx;
}
.order-check-img{
  width: 44rpx;
  height: 36rpx;
  display: block;
  margin: 44rpx auto 34rpx;
}
.user-hover-class{
  opacity: .8;
  background-color: #fcf9f9
}
/* 功能入口 */
.func-box{
  padding-left: 30rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #eeeeee;
  margin-bottom: 30rpx;
}
.func-item{
  height: 98rpx;
  line-height: 98rpx;
}
.func-item:not(:last-child){
  border-bottom: 2rpx solid #eeeeee;
}
.func-icon{
  width: 32rpx;
  height: 36rpx;
  position: relative;
  top: 8rpx;
  margin-right: 20rpx;
}
.func-right_icon{
  width: 20rpx;
  height: 36rpx;
  float: right;
  padding: 30rpx;
}